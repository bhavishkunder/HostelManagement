                               class="w-full px-4 py-2 rounded-lg border border-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>
                </div>
                <div class="flex justify-end gap-3 mt-6">
                    <button type="button" onclick="hideLoginModal()"
                            class="px-4 py-2 rounded-lg text-gray-700 hover:bg-gray-100 transition-colors">
                        Cancel
                    </button>
                    <button type="submit"
                            class="px-4 py-2 rounded-lg bg-blue-600 text-white hover:bg-blue-700 transition-colors">
                        Login
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        let currentLoginType = '';

        function showLoginModal(type) {
            currentLoginType = type;
            document.getElementById('loginType').value = type;
            document.getElementById('modalTitle').textContent = `${type.charAt(0).toUpperCase() + type.slice(1)} Login`;
            
            // Show/hide appropriate fields
            if (type === 'student') {
                document.getElementById('studentFields').classList.remove('hidden');
                document.getElementById('passwordField').classList.add('hidden');
            } else {
                document.getElementById('studentFields').classList.add('hidden');
                document.getElementById('passwordField').classList.remove('hidden');
            }
            
            document.getElementById('loginModal').classList.remove('hidden');
            document.getElementById('loginModal').classList.add('flex');
        }

        function hideLoginModal() {
            document.getElementById('loginModal').classList.add('hidden');
            document.getElementById('loginModal').classList.remove('flex');
            document.getElementById('loginForm').reset();
        }

        function handleLogin(event) {
            event.preventDefault();
            const formData = new FormData(event.target);
            
            // Check credentials based on type
            if (currentLoginType === 'chief' && formData.get('password') === 'chiefbmsit') {
                window.location.href = '/chief/dashboard';
            } else if (currentLoginType === 'warden' && formData.get('password') === 'wardenbmsit') {
                window.location.href = '/warden/dashboard';
            } else if (currentLoginType === 'security' && formData.get('password') === 'secbmsit') {
                window.location.href = '/security/dashboard';
            } else if (currentLoginType === 'student') {
                // Implement student login logic here
                window.location.href = '/student/dashboard';
            } else {
                alert('Invalid credentials. Please try again.');
            }
        }
        async function handleLogin(event) {
    event.preventDefault();
    const formData = new FormData(event.target);
    
    if (currentLoginType === 'chief' && formData.get('password') === 'chiefbmsit') {
        window.location.href = '/chief/dashboard';
    } else if (currentLoginType === 'warden' && formData.get('password') === 'wardenbmsit') {
        window.location.href = '/warden/dashboard';
    } else if (currentLoginType === 'security' && formData.get('password') === 'secbmsit') {
        window.location.href = '/security/dashboard';
    } else if (currentLoginType === 'student') {
        try {
            const response = await fetch('/student/login', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    rollNumber: formData.get('rollNumber'),
                    contact: formData.get('contact')
                })
            });

            const data = await response.json();
            
            if (data.success) {
                window.location.href = `/student/dashboard/${data.studentId}`;
            } else {
                alert('Invalid credentials. Please try again.');
            }
        } catch (error) {
            console.error('Login error:', error);
            alert('An error occurred. Please try again.');
        }
    } else {
        alert('Invalid credentials. Please try again.');
    }
}
    </script>
