<div id="requestsModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white rounded-xl shadow-lg max-w-4xl w-full mx-4">
        <div class="p-6 border-b flex justify-between items-center">
            <h2 class="text-2xl font-bold text-gray-800">Leave Requests</h2>
            <button onclick="hideRequestsModal()" class="text-gray-500 hover:text-gray-700">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="p-6 max-h-[70vh] overflow-y-auto">
            <div id="requestsList" class="space-y-4">
                <!-- Requests will be populated here -->
            </div>
        </div>
    </div>
</div>
<!-- Add this modal before the closing body tag -->
<div id="messageModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white rounded-xl shadow-lg max-w-lg w-full mx-4">
        <div class="p-6 border-b">
            <h2 class="text-2xl font-bold text-gray-800">Message Parent</h2>
            <p class="text-gray-600 text-sm mt-1">Send SMS to student's parent</p>
        </div>
        <form id="messageForm" class="p-6">
            <div class="space-y-4">
                <div>
                    <label for="studentRoll" class="block text-sm font-medium text-gray-700 mb-1">Student Roll Number</label>
                    <div class="flex gap-2">
                        <input type="text" id="studentRoll" name="studentRoll" required
                               class="flex-1 px-4 py-2 rounded-lg border border-gray-200 focus:outline-none focus:ring-2 focus:ring-red-500">
                        <button type="button" onclick="searchStudent()"
                                class="px-4 py-2 rounded-lg bg-gray-100 text-gray-700 hover:bg-gray-200 transition-colors">
                            Search
                        </button>
                    </div>
                </div>
                
                <div id="studentInfo" class="hidden bg-gray-50 rounded-lg p-4">
                    <p class="font-medium">
                        <span>Student Name: </span>
                        <span id="studentNameValue"></span>
                    </p>
                    <p class="text-sm text-gray-600">
                        <span>Parent Name: </span>
                        <span id="parentNameValue"></span>
                    </p>
                    <p class="text-sm text-gray-600">
                        <span>Parent Contact: </span>
                        <span id="parentContactValue"></span>
                    </p>
                </div>

                <div>
                    <label for="messageText" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
                    <textarea id="messageText" name="messageText" required rows="4"
                              class="w-full px-4 py-2 rounded-lg border border-gray-200 focus:outline-none focus:ring-2 focus:ring-red-500"></textarea>
                    <p class="text-sm text-gray-500 mt-1">Maximum 160 characters</p>
                </div>
            </div>
            
            <div class="flex justify-end gap-3 mt-6">
                <button type="button" onclick="hideMessageModal()"
                        class="px-4 py-2 rounded-lg text-gray-700 hover:bg-gray-100 transition-colors">
                    Cancel
                </button>
                <button type="submit"
                        class="px-4 py-2 rounded-lg bg-red-600 text-white hover:bg-red-700 transition-colors">
                    Send Message
                </button>
            </div>
        </form>
    </div>
</div>

    <script>
        // Add these functions to your existing script section

function showMessageModal() {
    document.getElementById('messageModal').classList.remove('hidden');
    document.getElementById('messageModal').classList.add('flex');
    document.body.style.overflow = 'hidden';
}

function hideMessageModal() {
    document.getElementById('messageModal').classList.add('hidden');
    document.getElementById('messageModal').classList.remove('flex');
    document.body.style.overflow = 'auto';
    // Reset form
    document.getElementById('messageForm').reset();
    document.getElementById('studentInfo').classList.add('hidden');
}

async function searchStudent() {
            const rollNumber = document.getElementById('studentRoll').value;
            if (!rollNumber) {
                alert('Please enter a roll number');
                return;
            }

            try {
                const response = await fetch(`/warden/student-by-roll/${rollNumber}`);
                const result = await response.json();
                console.log('API Response:', result);
                
                if (result.success) {
                    document.getElementById('studentNameValue').textContent = result.data.name;
                    document.getElementById('parentNameValue').textContent = result.data.parentName;
                    document.getElementById('parentContactValue').textContent = result.data.parentContact;
                    document.getElementById('studentInfo').classList.remove('hidden');
                } else {
                    alert('Student not found');
                    document.getElementById('studentInfo').classList.add('hidden');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error searching for student');
            }
        }

        document.getElementById('messageForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const rollNumber = document.getElementById('studentRoll').value;
            const messageText = document.getElementById('messageText').value;
            const parentContact = document.getElementById('parentContactValue').textContent;
            
            console.log('Sending message:', { rollNumber, messageText, parentContact });

            if (!rollNumber || !messageText) {
                alert('Please fill in all fields');
                return;
            }

            if (!parentContact) {
                alert('Parent contact information is missing. Please search for the student first.');
                return;
            }

            try {
                const response = await fetch('/warden/send-message', {
